@model Virsagi.Web.Models.News

@{
    ViewBag.Title = "Update News";
}

<h3 class="text-primary"></h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Update News</h4>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.NewsID)

                <div class="form-group">
                    <label class="col-md-2 control-label">News Headline 1</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.NewsHeadline1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NewsHeadline1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">News Details 1</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.NewsDetails1, new { @class = "form-control", @rows = "3" })
                        @Html.ValidationMessageFor(model => model.NewsDetails1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">News Headline 2</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.NewsHeadline2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NewsHeadline2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">News Details 2</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.NewsDetails2, new { @class = "form-control", @rows = "3" })
                        @Html.ValidationMessageFor(model => model.NewsDetails2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">News Headline 3</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.NewsHeadline3, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NewsHeadline3, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">News Details 3</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.NewsDetails3, new { @class = "form-control", @rows = "3" })
                        @Html.ValidationMessageFor(model => model.NewsDetails3, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-9 col-md-3">
                        <input type="submit" value="Update" class="btn btn-block btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>